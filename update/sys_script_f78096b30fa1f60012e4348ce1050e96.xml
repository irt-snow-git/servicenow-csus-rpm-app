        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	//mark the package associated with this record delivered
	var pkg = new GlideRecord("x_casus_receiving_package");
	pkg.addActiveQuery();
	pkg.addQuery('tracking_number', current.tracking_number); //pass in the package's reference
	pkg.query();
	
	if(pkg.next()) {
		pkg.state = 'delivered';
		pkg.delivered = gs.now();
		
		//set the run if empty
		if(pkg.run == '') {
			pkg.run = current.run;
		}
		
		pkg.update();
		
		gs.addInfoMessage("Package " + pkg.number + " delivery completed.");
	}
	
	

})(current, previous);]]></script>
